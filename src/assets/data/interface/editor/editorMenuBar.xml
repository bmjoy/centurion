<editorMenuBar height="30" font="tahoma_13px">
  <background r="60" g="68" b="104"/>
  <hover r="100" g="100" b="100"/>
  <editorMenuArray>
    <editorMenu id="0" name="EDITOR_File" onclick='Editor.ToggleMenu(0)'>
      <command id="0" name="WORD_New" hotkey1="CTRL" hotkey2="N" hotkey3="">
        <onclickScript>
          -- Lua Script
          Editor.OpenWindow(0)
          Editor.ToggleMenu(0)
        </onclickScript>
      </command>
      <command id="1" name="WORD_Open" hotkey1="CTRL" hotkey2="N" hotkey3="">
        <onclickScript>
          -- Lua Script
          Editor.OpenWindow(1)
          Editor.ToggleMenu(0)
        </onclickScript>
      </command>
      <command id="2" name="WORD_Save" hotkey1="CTRL" hotkey2="N" hotkey3="">
        <onclickScript>
          -- Lua Script
          -- Editor.SaveScenario()
          Editor.ToggleMenu(0)
        </onclickScript>
      </command>
      <command id="3" name="WORD_SaveAs" hotkey1="CTRL" hotkey2="N" hotkey3="">
        <onclickScript>
          -- Lua Script
          Editor.OpenWindow(2)
          Editor.ToggleMenu(0)
        </onclickScript>
      </command>
      <command id="4" name="WORD_Exit" hotkey1="CTRL" hotkey2="N" hotkey3="">
        <onclickScript>
          -- Lua Script
          Editor.Close()
        </onclickScript>
      </command>
    </editorMenu>
    <editorMenu id="1" name="EDITOR_Edit" onclick='Editor.ToggleMenu(1)'>
      <command id="0" name="EDITOR_Edit_UpdateNormals" hotkey1="CTRL" hotkey2="N" hotkey3="">
        <onclickScript>
          -- Lua Script
        </onclickScript>
      </command>
      <command id="1" name="EDITOR_Edit_Properties" hotkey1="CTRL" hotkey2="N" hotkey3="">
        <conditionScript function="ConditionEditProperties">
          -- lua script
          function ConditionEditProperties()
          condition1 = Game.IsObjectSelected(Mouse.GetLeftClickId())
          return condition1
          end
        </conditionScript>
        <onclickScript>
          -- Lua Script
          if (ConditionEditProperties()) then
            Editor.OpenWindow(3)
            Editor.ToggleMenu(1)
          end
        </onclickScript>
      </command>
    </editorMenu>
    <editorMenu id="2" name="EDITOR_Tools" onclick='Editor.ToggleMenu(2)'>
      <command id="0" name="EDITOR_Tools_AddObject" hotkey1="CTRL" hotkey2="N" hotkey3="">
        <onclickScript>
          -- Lua Script
          Editor.ToggleWindow(4)
          Editor.ToggleMenu(2)
        </onclickScript>
      </command>
      <command id="1" name="EDITOR_Tools_TerrainBrush" hotkey1="CTRL" hotkey2="N" hotkey3="">
        <onclickScript>
          -- Lua Script
        </onclickScript>
      </command>
    </editorMenu>
  </editorMenuArray>
</editorMenuBar>
